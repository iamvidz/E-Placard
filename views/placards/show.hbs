<div class="row">
    <div class="col s12 m8">
        <h3>{{placard.title}}
            <small>{{{editIcon placard.user user placard._id false}}}</small>
        </h3>
        <div class="card story">
            <div class="card-content">
                <span class="card-title">{{formatDate date 'MMMM Do YYYY, h:mm:ss a'}}</span>
                {{{placard.body}}}
            </div>
        </div>
    </div>
    <div class="col s12 m4">
        <div class="card center-align blue accent-1">
            <div class="card-content">
                <span class="card-title">{{placard.user.displayName}}</span>
                <img src="{{placard.user.image}}" class="circle responsive-img img-small">
            </div>
            <div class="card-action">
                <a class="white-text" href="/placards/user/{{placard.user._id}}">Notices from {{placard.user.firstName}}</a>
            </div>
        </div>
    </div>
</div>